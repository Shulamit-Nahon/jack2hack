new_symbol_table := proc() is

	local symbol_table := [
		'symbols' ~ [],
		'counters' ~ []
	]

	proc symbol_table@@add_symbol(var_type, name, segment) is
		if self.counters[segment] = null then
			self.counters[segment] := 0
		fi
		insert new_symbol(var_type, name, segment, self.counters[segment]) into self.symbols
		self.counters[segment] +:= 1
	end

	return symbol_table

end